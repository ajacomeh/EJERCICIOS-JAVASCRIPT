let valorCompra = 1000;
let iva = 0.12;
let total = valorCompra + (valorCompra * iva);

console.log("El valor total de la compra es: " + total);



let nombre = "Aaron";

for (let i = 1; i <= 5; i++) {
  console.log(nombre);
}




for (let i = 3; i <= 21; i++) {
  if (i % 3 === 0) {
    console.log(i);
  }
}



for (let i = 21; i >= 3; i--) {
  if (i % 3 === 0) {
    console.log(i);
  }
}



