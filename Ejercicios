let num1 = 6;
let num2 = 3;
let resultado;

if (num1 > num2) {
  resultado = num1 + num2;
  console.log(resultado);
} else {
  console.log("El primer número no es mayor que el segundo número.");
}




let num1 = 10;
let num2 = 5;
let operador = "+";

if (operador === "+") {
  let resultado = num1 + num2;
  console.log(resultado);
} else if (operador === "-") {
  let resultado = num1 - num2;
  console.log(resultado);
} else if (operador === "*") {
  let resultado = num1 * num2;
  console.log(resultado);
} else if (operador === "/") {
  let resultado = num1 / num2;
  console.log(resultado);
} else if (operador === "%") {
  let resultado = num1 % num2;
  console.log(resultado);
} else {
  console.log("Operador no válido");
}



let num1 = 6;
let num2 = 3;

if (num1 > num2) {
  console.log("El mayor número es: " + num1);
} else if (num2 > num1) {
  console.log("El mayor número es: " + num2);
} else {
  console.log("Ambos números son iguales.");
}


